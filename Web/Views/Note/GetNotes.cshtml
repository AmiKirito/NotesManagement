@model List<NoteViewModel>
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Title"];
}

<h1>@Localizer["Header"]</h1>

<div class="d-flex flex-row flex-wrap justify-content-around">
    @foreach (var note in Model)
    {
        <div class="card mt-2" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@note.Title</h5>
                <p class="card-text">@note.Content</p>
                <a asp-action="GetNote" asp-controller="Note" asp-route-id="@note.Id" class="card-link">@Localizer["Details"]</a>
                <a asp-action="Delete" asp-controller="Note" asp-route-id="@note.Id" class="card-link text-danger">@Localizer["Delete"]</a>
            </div>
        </div>
    }
</div>


